---
import { SHARE_LINKS } from "@/constants";
import LinkButton from "./LinkButton.astro";
import Icon from "./Icon.astro";
import { translateFor } from "@/i18n/utils";

const URL = Astro.url;

const t = translateFor(Astro.currentLocale);

// Map social names to icon names
const getIconName = (socialName: string) => {
  const iconMap: Record<string, string> = {
    "WhatsApp": "whatsapp",
    "Facebook": "facebook", 
    "X": "brandX",
    "Telegram": "telegram",
    "Pinterest": "pinterest",
    "Mail": "mail"
  };
  return iconMap[socialName] || "mail";
};
---

<div
  class="flex flex-col flex-wrap items-center justify-center gap-1 sm:items-start"
>
  <span class="italic">{t("sharePost.desc")}:</span>
  <div class="text-center">
    {
      SHARE_LINKS.map(social => (
        <LinkButton
          href={`${social.href + URL}`}
          class="scale-90 p-2 hover:rotate-6 sm:p-1"
          title={social.linkTitle(t)}
        >
          <Icon name={getIconName(social.name)} class="inline-block size-6 scale-125 fill-transparent stroke-current stroke-2 opacity-90 group-hover:fill-transparent sm:scale-110" />
          <span class="sr-only">{social.linkTitle(t)}</span>
        </LinkButton>
      ))
    }
  </div>
</div>
