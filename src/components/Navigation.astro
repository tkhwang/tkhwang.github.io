---
import ThemeIcon from "./ThemeIcon.astro";
---

<ul class="nav-links">
  <li><a href="/preview/" class="contrast">Preview</a></li>
  <li><a href="/company/" class="contrast">Company</a></li>
  <li><a href="/blog/" class="contrast">Blog</a></li>
  <li><a href="/tags/" class="contrast">Tags</a></li>
  <li><a href="/projects/" class="contrast">Projects</a></li>
  <li><a href="/about/" class="contrast">About</a></li>
  <li><ThemeIcon /></li>
</ul>

<style>
  .nav-links {
    width: 100%;
    top: 5rem;
    left: 48px;
    background-color: var(--pico-primary-background);
    display: none;
    margin: 0;
  }

  .nav-links a {
    display: block;
    text-align: center;
    padding: 10px 0;
    text-decoration: none;
    /* font-size: 1.2rem; */
    /* font-weight: bold; */
    /* text-transform: uppercase; */
  }

  .nav-links a:hover,
  .nav-links a:focus {
    background-color: var(--pico-primary-background);
  }
  .expanded {
    display: grid;
  }

  @media screen and (min-width: 1024px) {
    .nav-links {
      margin-left: 5em;
      display: block;
      position: static;
      width: auto;
      background: none;
    }

    .nav-links a {
      display: inline-block;
      padding: 15px 20px;
    }
  }
</style>
