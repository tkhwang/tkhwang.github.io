---
interface Props {
  url: string;
  title: string;
  pubDate: Date;
  description: string;
}

const months = [
  "January",
  "February",
  "March",
  "April",
  "May",
  "June",
  "July",
  "August",
  "September",
  "October",
  "November",
  "December",
];

const { url, title, pubDate, description } = Astro.props;
---

<li>
  <a href={url} class="post-title">{title}</a>
  <p><i>{description}</i></p>
  <small>
    {months[pubDate.getMonth() - 1]}
    {pubDate.getDate()}, {pubDate.getFullYear()}
  </small>
</li>

<style>
  .post-title,
  .post-title:visited {
    color: inherit;
    text-decoration: none;
    font-weight: 700;
  }

  .post-title:hover,
  .post-title:focus {
    text-decoration: underline;
  }
</style>
