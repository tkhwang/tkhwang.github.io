---
import { getCollection } from "astro:content";
import BlogPost from "./BlogPost.astro";

// Select posts explicitly marked as featured and sort by latest publish date.
const featuredPosts = (await getCollection("posts"))
  .filter((post) => post.data.featured)
  .sort((a, b) => {
    const aTime = new Date(a.data.pubDate).getTime();
    const bTime = new Date(b.data.pubDate).getTime();
    return bTime - aTime;
  })
  .slice(0, 3);
---

<ul>
  {
    featuredPosts.map((post) => (
      <BlogPost
        url={`/posts/${post.slug}/`}
        title={post.data.title}
        pubDate={post.data.pubDate}
        description={post.data.description}
      />
    ))
  }
</ul>
