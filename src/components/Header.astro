---
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="mb-6 flex items-center justify-between" transition:name="header">
  <nav class="flex items-center gap-4">
    <a href="/" class="font-bold text-blue-600"> home </a>
    <a href="/posts" class="font-bold text-blue-600"> posts </a>
  </nav>
  <ThemeToggle />
</header>

<style>
  a {
    @apply font-medium text-zinc-500 hover:text-zinc-900 hover:underline dark:hover:text-zinc-100;
  }

  a.text-blue-600 {
    @apply !text-blue-600 no-underline transition-colors duration-200 hover:font-extrabold hover:!text-blue-800 hover:no-underline;
  }
</style>
