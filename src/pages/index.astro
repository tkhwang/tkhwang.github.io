<style>
  .intro-muted {
    color: var(--color-text-muted);
    font-weight: 500;
  }
 
  main.home {
    max-width: min(1120px, 94vw);
    padding-inline: 1rem;
    font-size: 0.96rem;
  }

  main.home h1 {
    font-size: clamp(1.9rem, 2.6vw, 2.25rem);
    margin-bottom: 0.25rem;
  }

  main.home p {
    font-size: 0.98rem;
    line-height: 1.6;
    margin-bottom: 0.6rem;
  }

  main.home .intro-muted {
    font-size: 0.9rem;
  }

  main.home section + section {
    margin-top: 1.75rem;
  }

  .section-divider {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin: 1.75rem 0 1rem;
  }

  .section-divider__title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .section-divider__title span {
    font-size: 1.1rem;
  }

  .section-divider__title :global(h3) {
    margin: 0;
    font-weight: 700;
  }

  .section-divider__line {
    flex: 1;
    min-width: 120px;
    height: 1px;
    background-color: var(--color-divider);
  }

  .section-divider__link {
    font-size: 0.85rem;
    text-transform: none;
    text-decoration: none;
    color: var(--color-text-muted);
    font-weight: 600;
  }

  .section-divider__link:hover,
  .section-divider__link:focus {
    color: inherit;
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    main.home {
      padding-inline: 0.75rem;
      font-size: 0.95rem;
    }

    main.home h1 {
      font-size: 1.75rem;
    }

    .section-divider {
      gap: 0.5rem;
    }

    .section-divider__line {
      display: none;
    }

    .section-divider__link {
      margin-left: auto;
    }
  }
</style>
